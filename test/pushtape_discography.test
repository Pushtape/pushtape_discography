<?php

/**
 * @file
 * Simpletest case for track module.
 *
 * Verify pushtape discography functionality.
 */

/**
 * Functionality tests for node pushtape discography.
 */
class TrackTestCase extends DrupalWebTestCase {

  public static function getInfo() {
    return array(
      'name' => 'Track',
      'description' => 'Verify the track creation.',
      'group' => 'Pushtape',
    );
  }

  /**
   * Set up test.
   */
  public function setUp() {
    parent::setUp(array(
      'field',
      'filter',
      'image',
      'taxonomy',
      'views',
      'features',
      'features_test',
      'pushtape_discography'
    ));

    // Run a features rebuild to ensure our feature is fully installed.
    features_rebuild();

    $admin_user = $this->drupalCreateUser(array('administer features', 'access content'));
    $this->drupalLogin($admin_user);
  }

  /**
   * Verify the functionality of the pushtape discography.
   */
  function testTrackCreation() {
    // Create and login user.
    $account = $this->drupalCreateUser(array('access content'));
    $this->drupalLogin($account);

    // Create a new node. The image makes it more complicated, so skip it.
    $edit = array(
      'title' => $this->randomName(),
      'track_color[und][0][value]' => 'red',
      'track_color[und][1][value]' => 'green',
      'track_color[und][2][value]' => 'blue',
      'track_quantity[und][0][value]' => 100,
    );
    $this->drupalPost('node/add/track', $edit, t('Save'));
    $this->assertText("Example Track " . $edit['title'] . " has been created", "Found node creation message");
    $this->assertPattern("/The colors available.*red.*green.*blue/", "Correct 'colors available' on node page");

    // Look on the examples page to make sure it shows up there also.
    $this->drupalGet('examples/track');
    $this->assertText($edit['title'], "Found random title string");
    $this->assertPattern("/red.*green.*blue/", "Correct 'colors available' on Track example page");

  }

  /**
   * Check the value of body label.
   *
   * Checks whether body label has a value of "Notes"
   */

  function testBodyLabel() {
    // Create and login user.
    $account = $this->drupalCreateUser(array('access content'));
    $this->drupalLogin($account);

    // Request a node add track page.
    // Test whether the body label equals 'Example Description'.
    // Use '$this->assertRaw' to make certain to test the body label and not some other text.
    $this->drupalGet('node/add/track');
    $this->assertResponse(200, 'node/add/track page found');
    $this->assertRaw('<label for="edit-body-und-0-value">Notes </label>', 'Body label equals \'Notes\'');
  }
}